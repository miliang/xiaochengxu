 <view class='container1'>
  <view class="selection">
    <swiper indicator-dots='true' autoplay='true' interval='2000' duration='1000'>
      <block wx:for='{{imgUrls}}'>
        <swiper-item>
          <image src='{{item}}'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='selection'>
    <view class='header'>
      <text>精品推荐</text>
      <text class='text-all'>全部精品</text>
    </view>
    <view class='content1'>
      <view wx:for='{{itemSrc}}' class='content1-item'>
        <image src="{{item.src}}"></image>
        <view class='content1-item-text'>
          <text>{{item.content}}</text>
        </view>
      </view>
    </view>
    <view class='header'>
      <text>精品推荐</text>
      <text class='text-all'>全部精品</text>
     </view>
    <view class='list-item'>
      <image src='../../image/img2.png'></image>
      <view class='user-logo'>
      <image src='../../image/avatar.png'></image></view>
    </view> 
    <text class='title'>标题标题标题</text> 
    <text class='list-item-text'>这是内容这是内容这是内容</text>
  </view>
</view> 

