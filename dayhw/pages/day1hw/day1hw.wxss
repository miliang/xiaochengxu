/* header   */
 .header{
  border-left: 3px solid limegreen;
  padding: 15rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: baseline
} 
/*绿色的字  */
 .text-all{
  font-size: 14px;
  color: green;
}
.content1{
 display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: space-around
}
.content1-item{
 height: 200rpx;
 width: 47%;
 position: relative;
  margin-top: 15rpx; 
} 
/*图片  */
 .content1-item image{
  width: 100%;
  height: 100%; 
  /*高度百分之百是相对于父元素  */
 } 
  .content1-item-text{
   position: absolute;
  bottom: 0;
  background-color: black;
  opacity: 0.7;
  color: white;
  font-size: 12px;
  width: 96%;
   padding: 20rpx 0 15rpx 15rpx  
}  
.content1-item image{
  width: 100%;
  height: 100%;
}
.list-item image{
  height: 270rpx;
}
.user-logo image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  position: absolute;
  right: 30rpx;
  margin-top: -70rpx;
}
.title{
  margin-top: 30rpx;
  display: flex;
  font-size: 20px;
}
.list-item-text{
  font-size: 12px;
  padding: 15rpx 0 60rpx 0;
} 

