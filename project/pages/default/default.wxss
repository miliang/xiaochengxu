/* pages/default/default.wxss */
.container{
  background-color: rgba(96 ,96 ,96 ,0.1);
}

swiper-item image {
  width:320px;
  height:150px;
  display:inline-block;
  overflow:hidden;
}
/*输入框  */
input{
  width: 82%;
  background-color: white;
  /* border: 1px solid black; */
  font-size: 12px;
  padding-left: 30rpx;
  position: absolute;
   top: 25%; 
  left: 7%
}
/*输入框里的图片  */
.input image{
  position: absolute;
  top:25%;
  right: 10%;
  padding-top: 5rpx;
}
/*页脚  */
.footer{
  background-color: rgba(255 ,255 ,255 ,0.8);
  display:flex; 
  height: 160rpx;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: space-around;  
}
.footer-item{
  width: 15%;
  height: 100rpx;
  font-size: 12px;
  text-align: center;
  }
  /*页脚的图片  */
.footer-item image{
  height: 100%;
  width: 100%;  
}
/*头部  */
.header{
  /* border: 1px solid green; */
  background-color: white;
  margin-top: 20rpx;
  padding-top: 20rpx;
  display: flex;
}
/*粉色的圆  */
.circle{
  background-color:#ff3366; 
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
  margin: 15rpx 10rpx 0 10rpx;
}
.header-text{ 
  font-size: 14px;
}
.seletion{
  background-color: rgba(255 ,255 ,255 ,0.8);
}
/*食品  */
.content{
display: flex;
flex-wrap: wrap;
flex-direction: row;
margin-left: 5rpx;
justify-content: space-around;
}
.content-item{
  /* border: 1px solid red; */
  width: 47%;
  height: 350rpx;
  margin-top: 30rpx; 
  margin-bottom: 120rpx;
  flex-wrap: wrap;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item-text{
  font-size: 13px;
  margin-top: 30rpx;
}
.content-item-price{
  font-size: 12px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  color: red;
}
.content-item-dis{
  font-size: 12px;
  float: left;
  margin-left: 40%;
  margin-top: -11%;
}
.car{
